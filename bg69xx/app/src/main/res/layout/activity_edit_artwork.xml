<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollIntro"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        android:id="@+id/editArtworkLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imgEditPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="Photo taken of the artwork"
            app:srcCompat="@drawable/ic_add_a_photo" />

        <EditText
            android:id="@+id/txtEditTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgEditPicture"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Title"
            android:inputType="textPersonName"
            android:maxLength="100" />

        <EditText
            android:id="@+id/txtEditArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEditTitle"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Artist"
            android:inputType="textPersonName"
            android:maxLength="100" />

        <EditText
            android:id="@+id/txtEditRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEditArtist"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Room or Location of the artwork"
            android:inputType="textPersonName"
            android:maxLength="100" />

        <EditText
            android:id="@+id/txtEditDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEditRoom"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Description"
            android:inputType="textMultiLine"
            android:maxLines="10" />

        <EditText
            android:id="@+id/txtEditYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtEditDescription"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Edit Year"
            android:inputType="date"
            android:maxLength="4" />

        <RatingBar
            android:id="@+id/ratingEditRate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtEditYear"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:stepSize="1.0"
            android:transformPivotX="0dp" />

        <Button
            android:id="@+id/btnEditArtwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingEditRate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:background="#12CD3D"
            android:text="Edit Artwork"
            android:padding="20px"/>

    </RelativeLayout>
</ScrollView>