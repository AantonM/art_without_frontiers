<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketsActivity">

    <TextView
        android:id="@+id/txtPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tickets"
        android:layout_marginLeft="5dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/tablePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingRight="50dp"
                android:textSize="20sp"/>

            <TextView
                android:text="£"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAdult"
                android:layout_column="2"
                android:textSize="20sp"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingRight="50dp"
                android:textSize="20sp"/>

            <TextView
                android:text="£"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtChild"
                android:layout_column="2"
                android:textSize="20sp"/>

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingRight="50dp"
                android:textSize="20sp"/>

            <TextView
                android:text="£"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStudent"
                android:layout_column="2"
                android:textSize="20sp"/>

        </TableRow>
    </TableLayout>

    <TextView
        android:text="*The currency can be modified from the application settings."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:textStyle="italic"
        android:paddingRight="70dp"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tablePrice"/>

</RelativeLayout>
